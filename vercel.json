{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/send-message",
      "destination": "/app.js"
    },
    {
      "source": "/api/health",
      "destination": "/app.js"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' https://vercel.live; connect-src 'self' https://vercel.live; style-src 'self' 'unsafe-inline';"
        }
      ]
    }
  ]
}
